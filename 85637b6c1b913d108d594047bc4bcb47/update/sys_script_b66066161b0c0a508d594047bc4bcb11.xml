        <script><![CDATA[ (function executeRule(current, previous /*null when async*/ ) {
     var name;
    
     var comments = '';
     var date;
     gsappro = new GlideRecord('sysapproval_approver');
     gsappro.addQuery('source_table', 'x_ndecd_demande_0_demande_d_approvisionnement');
     gsappro.addQuery('sysapproval', current.sys_id);
     gsappro.orderByDesc('sys_created_on');
     gsappro.query();
     if (gsappro.next()) {
         name = gsappro.approver;
         date = gsappro.sys_created_on.getDisplayValue();

     }
     if (current.approval == 'requested') {

         comments = date + ' La demande est en cours de validation ';
     }
     if (current.approval == 'rejected') {

         comments = date + ' La demande a été rejetée ';
     }
     if (current.approval == 'approved') {
         comments = date + ' La demande est validée ';
     }
     current.comments.setJournalEntry(comments, name);
     current.update();

 })(current, previous);]]></script>
